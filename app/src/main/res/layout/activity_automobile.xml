<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:id="@+id/timeListView"
        android:layout_width="50dp"
        android:layout_height="wrap_content">
    </ListView>

    <ListView
        android:id="@+id/litresListView"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/timeListView">
    </ListView>

    <ListView
        android:id="@+id/priceListView"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/litresListView">
    </ListView>

    <ListView
        android:id="@+id/kiloListView"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/priceListView">
    </ListView>

    <Button
        android:id="@+id/createEntryButton"
        android:text="Add Entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/kiloListView">
    </Button>

</RelativeLayout>

