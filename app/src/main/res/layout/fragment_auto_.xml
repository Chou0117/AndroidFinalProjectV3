<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context="com.example.antho.android_final.Auto_Fragment">

    <TextView
        android:id="@+id/avgGasPriceLabel"
        android:layout_marginTop="20dp"
        android:textColor="@color/autoWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/autoAvgGas"/>

    <TextView
        android:id="@+id/avgGasPrice"
        android:layout_marginTop="20dp"
        android:textColor="@color/autoWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="not set"
        android:layout_toRightOf="@id/avgGasPriceLabel"/>

    <TextView
        android:id="@+id/gasAmountPurchasedLabel"
        android:textColor="@color/autoWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/autoTotalLitres"
        android:layout_below="@id/avgGasPriceLabel"/>

    <TextView
        android:id="@+id/gasAmountPurchased"
        android:textColor="@color/autoWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="unset"
        android:layout_marginTop="20dp"
        android:layout_below="@id/avgGasPrice"
        android:layout_toRightOf="@id/gasAmountPurchasedLabel" />

</RelativeLayout>
