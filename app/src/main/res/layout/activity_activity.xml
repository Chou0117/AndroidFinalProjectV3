<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/activity_Message_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:text="Hello" />


    <TextView
        android:id="@+id/activity_Message_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_Button1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Hello" />

    <TextView
        android:id="@+id/activity_Message_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Hello" />

    <Button
        android:id="@+id/activity_Button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_Message_2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="38dp"
        android:text="Hello" />

    <Button
        android:id="@+id/activity_Button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_Message_3"
        android:layout_centerHorizontal="true"
        android:text="Hello" />

    <Button
        android:id="@+id/activity_Button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/activity_Button3"
        android:layout_below="@+id/activity_Message_1"
        android:text="Hello" />

