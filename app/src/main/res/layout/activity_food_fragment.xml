<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DDFFDD">
    <TextView
        android:id="@+id/fragFoodDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Message Details" />

    <TextView
        android:id="@+id/fragFoodName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="30dp"
        android:layout_below="@+id/fragFoodDate"/>

    <TextView
        android:id="@+id/fragFoodCalorie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calorie"
        android:textSize="20dp"
        android:layout_below="@+id/fragFoodName"/>

    <TextView
        android:id="@+id/fragFoodFat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fat"
        android:textSize="20dp"
        android:layout_below="@+id/fragFoodCalorie"/>

    <TextView
        android:id="@+id/fragFoodCarbohydrate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Carbohydrate"
        android:textSize="20dp"
        android:layout_below="@+id/fragFoodFat"/>

    <Button
        android:id="@+id/messageDeleteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Message"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>